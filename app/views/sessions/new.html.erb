<% provide(:title, "Sign in") %>


<div class="row">
	<div class="span6 offset1">

		<h3>Sign in</h3>
		<hr>

		<div class="well">

			<%= form_for(:session, url: sessions_path) do |f| %>

				<%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<br><br>

				<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
			<% end %>

		</div>

	</div>

	<div class="span4">

		<div class ="well">

			<h4>New user?</h4> 
			<p><%= link_to "Sign up now for free!", signup_path %></p>
			<p>You will get more functionality to enjoy your own activities, follow people and make Activity Finder bigger.<p>


			<center>
				<%= link_to about_path, :class => 'btn btn-medium'  do %>
					<i class="icon-black icon-question-sign"></i> I want more information
				<% end %>
			</center>

		</div>

	</div>
</div>

