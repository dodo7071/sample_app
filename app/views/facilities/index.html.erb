<% provide(:title, 'Facilities') %>

<div class="row">

		<div class="span8">

			<h3>Find sport facilities</h3>

			<hr>

			<div class="well">

				<%= form_tag '/find_facilities', method: :get do %>
			
					<%= label_tag :location_id, 'Location' %>
					<%= collection_select(:location_id, nil , Location.order("name"), :id, :name, :prompt => false) %>
					<br><br>

					<%= label_tag :activity_type_id, 'Activity type' %>
					<%= collection_select(:activity_type_id, nil , ActivityType.all, :id, :name, :prompt => false) %>
					<br><br>			

					<div>
						<%= submit_tag 'Find facility', class: "btn btn-large btn-primary" %>
					</div>
				<% end %>

			</div>

		</div>


		<aside class="span4">
			<section>

				<% if signed_in? %>

					<div class="well">

						<h4>Facilities close to you:</h4>

						<% @recommended.each do |i| %>
							<dd>
								<%= link_to i.title, i %>
							</dd>
						<% end %>

					</div>
				<% end %>

			</section>
		</aside>



</div>
