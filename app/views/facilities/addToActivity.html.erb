<% current_user.getActivities.each do |i| %>
	
	<hr>				

	<b><%= link_to i.title, i %></b>
	<%= i.getParticipantCount %> joined people 


	<%= form_for ActivityFacility.new do |f| %>
		<%= f.hidden_field :activity_id, :value => i.id %>
		<%= f.hidden_field :facility_id, :value => @facility.id %>
		<%= f.submit 'Set  ' + @facility.title + '  to this activity' , class: "btn btn-small btn-primary" %>
	<% end %>

<% end %>
