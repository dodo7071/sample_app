<% provide(:title, 'My participations') %>

<div class="row">
		<aside class="span4">
			<section>

				<div class="well">

					<h4>Recommended activities:</h4>

					<% @recommended.each do |i| %>

						<a href="<%= activity_path(i) %>">

							<font color="black">
								<div class="well" style="width:80%;background:#00FFFF" onmouseover="this.style.background='#87CEFA';" onmouseout="this.style.background='#00FFFF';">

									<%= time_ago_in_words(i.beg_date) %><br>
									<%= i.getParticipantCount %> joined people<br>
									<%= i.getType %><br>
									<%= i.getLocation %>

								</div>
							</font>

					<% end %>

				</div>
			</section>
		</aside>


		<div class="span8">

			<h3>My participations(<%= @activities.count %>)</h3>

			<hr>

			<%= render @activities %>

		</div>

</div>



