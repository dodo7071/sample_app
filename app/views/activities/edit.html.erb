<% provide(:title, "Edit activity") %> 

<div class="row">
	<div class="span8 offset2">

		<h3>Update your activity</h3>
		<hr>
		
		<div class="well">

			<%= form_for(@activity) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :title %>
				<%= f.text_field :title %>

				<%= f.label :beg_date %>
				<%= f.text_field :beg_date, 'data-behaviour' => 'datepicker' %>

				<%= f.label :end_date %>
				<%= f.text_field :end_date, 'data-behaviour' => 'datepicker' %>

				<%= f.label :beg_time %>
				<%= f.text_field :beg_time %>

				<%= f.label :end_time %>
				<%= f.text_field :end_time %>

				<%= f.label :location_id %>
				<%= f.collection_select :location_id, Location.all, :id, :name %>


				<%= f.label :activity_type_id %>
				<%= f.collection_select :activity_type_id, ActivityType.all, :id, :name %>

				<%= f.label :activity_note %>
				<%= f.text_field :note %>

				<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<% end %>

		</div>

	</div>
</div>
