<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Activity Finder", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">

		 <li>
			<%= link_to root_path do %>
				<i class="icon-home"></i> Home				
			<% end %>
		</li>

          <% if signed_in? %>
			<li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-star"></i> <%= "Activities" %> <b class="caret"></b>
              </a>
			<ul class="dropdown-menu">
                <li>
					<%= link_to find_activity_path do %>
						<i class="icon-search"></i> Find activities
					<% end %>
				</li>

				<li class="divider"></li>
                
				<li>
					<%= link_to create_activity_path do %>
						<i class="icon-plus"></i> Create activity
					<% end %>
				</li>

				<li class="divider"></li>

				<li>
					<%= link_to my_participations_path do %>
						<i class="icon-tags"></i> My participations
					<% end %>
				</li>

				<li class="divider"></li>

				<li>
					<%= link_to my_activity_path do %>
						<i class="icon-star"></i> My activities
					<% end %>
				</li>
				       
              </ul>

               <li>
					<%= link_to facilities_path do %>
						<i class="icon-th"></i> Sport facilities
					<% end %>
				</li>

			<li>
				<%= link_to users_path do %>
					<i class="icon-user"></i> Users
				<% end %>
			</li>

            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-flag"></i> <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
					<%= link_to current_user do %>
						<i class="icon-user"></i> My profile
					<% end %>
				</li>
                <li class="divider"></li>
                <li>
                 <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
			

			<li>
				<%= link_to new_user_path do %>
					<i class="icon-list-alt"></i> Registration
				<% end %>
			</li>

            <li>
				<%= link_to signin_path do %>
					<i class="icon-circle-arrow-right"></i> Sign in
				<% end %>
			</li>


          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>


