<a href="<%= user_path(user) %>">

	<font color="black">
		<div class="well" style="width:96%;background:#00FFFF" onmouseover="this.style.background='#87CEFA';" onmouseout="this.style.background='#00FFFF';">

			<big><b><%= user.name %></b> (<%= user.getLocation %>)</big>


			<div style="width: 100%;">
					<div style="float:left; width: 20%">
						<b>Age:</b> <br> <b>Contact:</b>
					</div>


					<div style="float:left;">
						<%= user.age %> <br> <%= user.contact %><% if user.contact == nil%>no value<% end %>
					</div>

				</div>
				<div style="clear:both"></div>


			 

		</div>
	</font>
</a>
